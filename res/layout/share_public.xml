<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/header" 
    >
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="68dp"
	    android:orientation="vertical"
	    android:gravity="center"
	    >
		<TextView android:id="@+id/txtTitle"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
			android:text="@string/share_public"
			android:textSize="24sp"
			android:textColor="@color/tab"
		    />
	</LinearLayout>
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="2dp"
	    android:orientation="horizontal"
	    android:background="@color/tab"
	    />
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="100dp"
	    android:orientation="horizontal"
	    >
	    
		<Button  android:id="@+id/btnGooglePlus"
			android:drawableTop="@drawable/share_google_plus"
			android:paddingTop="@dimen/paddingShareBtn"
			android:paddingBottom="@dimen/paddingShareBtn"
			style="@style/inplaceBtn"
			android:text="@string/share_google_plus"
		/>
		<Button  android:id="@+id/btnFacebook"
			android:drawableTop="@drawable/share_facebook"
			android:paddingTop="@dimen/paddingShareBtn"
			android:paddingBottom="@dimen/paddingShareBtn"
			style="@style/inplaceBtn"
			android:text="@string/share_facebook"
		/>
		<Button  android:id="@+id/btnTwitter"
			android:drawableTop="@drawable/share_twitter"
			android:paddingTop="@dimen/paddingShareBtn"
			android:paddingBottom="@dimen/paddingShareBtn"
			style="@style/inplaceBtn"
			android:text="@string/share_twitter"
		/>
				
	</LinearLayout>
</LinearLayout>
