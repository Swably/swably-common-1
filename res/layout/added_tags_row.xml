<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
	android:layout_width="fill_parent" 
	android:layout_height="wrap_content"
	android:paddingBottom="1px"
	xmlns:app="http://schemas.android.com/apk/res-auto">
	<LinearLayout
	    android:orientation="vertical"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
		android:background="@drawable/row"
		android:padding="@dimen/padding"
		>
		<LinearLayout
		    android:orientation="horizontal"
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content"
			android:gravity="center_vertical"
			>
			<TextView android:id="@+id/txtTagName" 
				style="@style/name"
				android:textSize="20sp"
				android:textColor="@color/tab"
				android:paddingLeft="5dp"
				android:layout_weight="1"
			/>
			<RelativeLayout 
				android:layout_width="90dp" 
				android:layout_height="wrap_content"
			    >
				<TextView android:id="@+id/btnCheck" 
				    android:text="@string/add"  
		    		style="@style/frameBtn.small"
				    android:layout_alignParentRight="true"
				    />
				<ImageView  android:id="@+id/btnUncheck" 
				    style="@style/frameBtn.small"
				    android:layout_width="wrap_content"
				    android:src="@drawable/followed"
				    android:layout_alignParentRight="true"
				    />
			</RelativeLayout>
		</LinearLayout>
	</LinearLayout>
	<View android:id="@+id/bottomDivider" style="@style/divider" android:layout_marginLeft="10dp" android:layout_marginRight="10dp"/>
</LinearLayout>
		