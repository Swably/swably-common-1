<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="fill_parent" 
	android:layout_height="wrap_content"
	android:paddingBottom="1px"
	>
	<LinearLayout android:id="@+id/row"  
	    android:orientation="horizontal"
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content"
		android:background="@drawable/row"
		android:padding="@dimen/padding"
		>
		<TextView android:id="@+id/txtTagName" 
			style="@style/name"
			android:textSize="20sp"
			android:textColor="@color/tab"
			android:paddingLeft="5dp"
			android:layout_weight="1"
		/>
		<goofy2.utils.Avatar android:id="@+id/avatar1"
			style="@style/avatar.small"
			app:radius="12"
			android:layout_marginLeft="10dp"
		/>
		<goofy2.utils.Avatar android:id="@+id/avatar2"
			style="@style/avatar.small"
			app:radius="12"
			android:layout_marginLeft="10dp"
		/>
		<goofy2.utils.Avatar android:id="@+id/avatar3"
			style="@style/avatar.small"
			app:radius="12"
			android:layout_marginLeft="10dp"
		/>
	</LinearLayout>	
	<View android:id="@+id/bottomDivider" style="@style/divider" android:layout_below="@id/row" android:layout_marginLeft="@dimen/padding" android:layout_marginRight="@dimen/padding"/>
</RelativeLayout>
