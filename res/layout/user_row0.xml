<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
	android:layout_width="fill_parent" 
	android:layout_height="wrap_content"
	android:paddingBottom="1px"
	xmlns:app="http://schemas.android.com/apk/res/goofy2.swably">
	<LinearLayout
	    android:orientation="vertical"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
		android:background="@drawable/row"
		android:padding="@dimen/padding"
		>
		<LinearLayout
		    android:orientation="horizontal"
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content"
			>
			<goofy2.utils.Avatar android:id="@+id/avatar"
			    android:background="@drawable/noname" 
				style="@style/avatar"
				android:layout_marginRight="10dp"
			/>
			<LinearLayout 
				android:orientation="vertical"
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content"
				android:layout_weight="1"
				>
				<TextView android:id="@+id/txtName" 
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					style="@style/name"
				/>
				<TextView android:id="@+id/txtUsername" 
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					style="@style/desc"
					android:visibility="gone"
				/>
			</LinearLayout>
			<ImageView  android:id="@+id/btnFollow" 
			    android:src="@drawable/btn_follow_light"
			    android:layout_width="wrap_content"
			    android:layout_height="fill_parent"
			    android:layout_gravity="center"
			    android:background="@drawable/icon_clickable"
			    android:clickable="true" 
			    />
			<ImageView  android:id="@+id/btnUnfollow" 
			    android:src="@drawable/btn_unfollow_light" 
			    android:layout_width="wrap_content"
			    android:layout_height="fill_parent"
			    android:layout_gravity="center"
			    android:background="@drawable/icon_clickable"
				android:visibility="gone"
			    />
		</LinearLayout>
	</LinearLayout>
	<LinearLayout android:id="@+id/bottomDivider" style="@style/divider" android:layout_below="@id/row" android:layout_marginLeft="10dp" android:layout_marginRight="10dp"/>
</LinearLayout>
		