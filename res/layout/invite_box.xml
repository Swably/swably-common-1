<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:id="@+id/viewInviteBox"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	>
	<RelativeLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:padding="@dimen/padding"
		android:layout_margin="@dimen/padding"
		android:background="@color/panel"
		>
		<ProgressBar android:id="@+id/loadingFriends"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_centerInParent="true"
		/>
	    
    	<TextView android:id="@+id/txtFriendCount"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="32sp"
			android:textColor="@color/content"
			android:text="0"
		    android:typeface="serif"	    
		    android:layout_centerInParent="true"
		    android:visibility="gone"
		    />
		<RelativeLayout android:id="@+id/viewNext"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:gravity="center_horizontal"
			android:visibility="invisible"
			>
	    	<TextView android:id="@+id/txtInvitePrompt"
	    	    style="@style/name"
	    	    android:singleLine="false"
	    	    android:text="@string/invite_prompt"
	    	    android:layout_centerHorizontal="true"
	    	    android:layout_marginTop="20dp"
			    />
	    	<TextView android:id="@+id/btnInviteMore"
	    	    style="@style/name"
	    	    android:text="@string/invite_more"
	    	    android:layout_height="36dp"
	    	    android:layout_width="fill_parent"
	    	    android:gravity="center"
	    	    android:background="#f29c9f"
	    	    android:textColor="#ffffff"
	    	    android:textAllCaps="true"
	    	    android:layout_centerHorizontal="true"
	    	    android:layout_marginTop="24dp"
	    	    android:layout_marginBottom="5dp"
	    	    android:clickable="true"
	    	    android:layout_below="@id/txtInvitePrompt"
			    />
	   	</RelativeLayout>
	</RelativeLayout>
	<ImageView android:id="@+id/btnCloseInvite"            
	    style="@style/titleBtn"
	    android:layout_width="42dp"
	    android:layout_height="42dp"
	    android:padding="8dp"
	    android:layout_margin="@dimen/padding"
		android:src="@drawable/ic_action_cancel"
		android:layout_alignParentRight="true"
	    />
</RelativeLayout>
