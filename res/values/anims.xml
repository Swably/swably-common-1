<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="defaultAnim" parent="@android:style/Animation.Activity" mce_bogus="1">      
		<item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>            
		<item name="android:activityOpenExitAnimation">@anim/shrink_fade_out_center</item>            
		<item name="android:activityCloseEnterAnimation">@anim/grow_fade_in_center</item>     
		<item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
	</style>

	<style name="noAnim" parent="@android:style/Animation.Activity" mce_bogus="1">      
		<item name="android:activityOpenEnterAnimation">@anim/nothing</item>            
		<item name="android:activityOpenExitAnimation">@anim/nothing</item>            
		<item name="android:activityCloseEnterAnimation">@anim/nothing</item>     
		<item name="android:activityCloseExitAnimation">@anim/nothing</item>
	</style>
	
	<style name="MainMenuAnim" parent="@android:style/Animation.Activity" mce_bogus="1">      
		<item name="android:activityOpenEnterAnimation">@anim/grow_in_center_from_up_left</item>            
		<item name="android:activityOpenExitAnimation">@anim/nothing</item>            
		<item name="android:activityCloseEnterAnimation">@anim/nothing</item>     
		<item name="android:activityCloseExitAnimation">@anim/shrink_out_to_up_left</item>
	</style>

	<style name="PickLocalAppsAnim" parent="@android:style/Animation.Activity" mce_bogus="1">      
		<item name="android:activityOpenEnterAnimation">@anim/slide_in_bottom</item>            
		<item name="android:activityOpenExitAnimation">@anim/slide_out_up</item>            
		<item name="android:activityCloseEnterAnimation">@anim/slide_in_up</item>     
		<item name="android:activityCloseExitAnimation">@anim/slide_out_bottom</item>
	</style>

	<style name="fadeInOutAnim" parent="@android:style/Animation.Activity" mce_bogus="1">      
		<item name="android:activityOpenEnterAnimation">@anim/fade_in</item>            
		<item name="android:activityOpenExitAnimation">@anim/fade_out</item>            
		<item name="android:activityCloseEnterAnimation">@anim/fade_in</item>     
		<item name="android:activityCloseExitAnimation">@anim/fade_out</item>
	</style>
</resources>